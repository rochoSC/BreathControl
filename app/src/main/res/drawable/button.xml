<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners  android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomLeftRadius="10dip"
                android:bottomRightRadius="10dip" />
            <gradient android:startColor="#90AE00" android:endColor="#90AE00" android:angle="270" />
            <stroke android:width="3px" android:color="#687E00" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners  android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomLeftRadius="10dip"
                android:bottomRightRadius="10dip" />
            <gradient android:startColor="#D9CEF900" android:endColor="#D9A5C224" android:angle="270" />

        </shape>
    </item>
</selector>